= form_for(@badge) do |f|
  - if @badge.errors.any?
    #error_explanation
      %h2
        = pluralize(@badge.errors.count, "error")
        prohibited this badge from being saved:
      %ul
        - @badge.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :fa_symbol
    %br/
    = f.text_field :fa_symbol
  .actions
    = f.submit
